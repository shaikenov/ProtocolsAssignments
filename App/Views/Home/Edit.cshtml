@model App.Models.Assignment

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    <h4>Protocol</h4>
    @Html.HiddenFor(model=>model.Id)
    <p>
        Title <br />
        @Html.EditorFor(model => model.Title)
    </p>

    <p>
        Responsible <br />
        @foreach(var r in ViewBag.Responsibles)
        {
            <input type="checkbox" name="selectedResponsibles" value="@r.Id"
                   @(Model.Responsibles.Contains(r) ? "checked=\"checked\"": "")/>@r.Name <br />
        }
    </p>

    <p>
        Deadline <br />
        @Html.EditorFor(model => model.Deadline)
    </p>

    <p>
        Protocol <br />
        @Html.DropDownListFor(model => model.ProtocolId, ViewBag.Protocols as SelectList)
    </p>
    <p>
        <input type="submit" value="Save" />
    </p>

}

<div>
    @Html.ActionLink("Back", "AssignmentsList")
</div>


